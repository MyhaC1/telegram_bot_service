# Application
ENVIRONMENT=development
DEBUG=true
LOG_LEVEL=INFO

# Server
HOST=0.0.0.0
PORT=8002

# API Gateway
API_GATEWAY_URL=http://api_gateway:8080
# Включить mock для тестирования без реального API Gateway (true для локального теста)
USE_MOCK_API_GATEWAY=false

# Telegram Bots
BOT_TOKEN_MANAGER=YOUR_MANAGER_BOT_TOKEN
BOT_TOKEN_ADMIN=YOUR_ADMIN_BOT_TOKEN

# Admin Access (список telegram_id через запятую)
ADMIN_TELEGRAM_IDS=123456789,987654321

# Telegram WebApp URL (замените на ваш GitHub Pages URL)
WEBAPP_URL=https://YOUR_GITHUB_USERNAME.github.io/telegram_bot_service/webapp/

# Webhook (optional, для production)
USE_WEBHOOK=false
WEBHOOK_DOMAIN=
WEBHOOK_PATH=/webhook
